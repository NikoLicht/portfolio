---
let {title} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{title}</title>
        <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
    </head>
    <body>
        <div class="content">
            <slot>
        </div>
    </body>
</html>


<style>
    :root{
    --dark-color: rgb(37, 37, 48);
    --medium-dark: rgb(180, 180, 180);
    --light-color: rgb(208, 226, 226);
    --gradient-light: rgb(223, 223, 223);
    --egg-color: rgb(255, 255, 255);
    --egg-color-dark: rgb(230, 230, 230);
    --egg-color-saturated: rgb(203, 207, 218);
    --title-padding: 2vw;
    }

    body{
        background-color: var(--dark-color);
    }

    .section{
        padding: 1em;
        margin: 0 auto 0 auto;
        width: 80%;
        max-width: 1200px;
    }

    .section:nth-child(2){
        margin-top: 40px;
    }

    .content {
        background-color: var(--dark-color);
        width: 100%;
        margin: 0 auto 0 auto;
        font-family: 'Roboto Mono', monospace;
        padding-top: 1rem;
        padding-bottom: 3em;
    }



    @media only screen and (max-width: 600px) {
        .content{
            padding-top: 0em;
        }

        .section{
            padding: 0em;
            margin: auto;
            width: 90%;
        }
    }
</style>