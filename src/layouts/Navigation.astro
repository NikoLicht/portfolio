---
const infoPages = await Astro.glob("../pages/info/*.md");
const homePage = await import("../pages/index.astro");
---

<div class="navigation-container">
    <div class="nav-wrapper">
        <nav class="navigation">
            <li><a href={homePage.url + "/"}>home</a></li>
            {
                infoPages.map( (info) => <li><a href={info.url}>{info.frontmatter.title}</a></li>)
            }
            <li><a href="https://photos.app.goo.gl/FfW47hXbmPsA9Ne19">gallery</a></li>
        </nav>
    </div>
</div>

<style>

    .navigation-container{
        display: flex;
        justify-content: flex-end;
    }

    .nav-wrapper{
        width: 40%;
        display: flex;
        justify-content: flex-end;
    }

    .navigation {
        grid-area: upperRight;
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        display: flex;
        justify-content: space-around;
        flex-grow: 1;
    }

    li {
        float: left;
        flex-basis: content;
        flex-grow: 1;
        padding: 0;
        transition: background-color 0.3s ease-in-out;

        display: flex;
        align-items:center;
        justify-content:space-around;
        text-align:center;

    
    }

    li:hover{
        background-color: var(--dark-color);
    }

    li a {
        display: block;
        color: var(--dark-color);
        text-align: center;
        padding: 5px;
        text-decoration: none;
        font-size: 1vi;
        font-family: 'Roboto Mono', monospace;
        text-transform: uppercase;
    }

    li a:hover{
        font-style: italic;
        color: var(--egg-color-dark);
    }

    @media only screen and (max-width: 600px) {
        .navigation-container{
            position: sticky;
            top: 0;
            background-color: var(--dark-color);
            height: 10vh;
        }

        .navigation{
            padding-bottom:0;
            margin-bottom:0;
            display: flex; /* Add this */
            flex-wrap: wrap; /* Add this */
        }

        .nav-wrapper{
            width: 100%;
        }

        li {
            flex-basis: 50%;
        }

        li a {
            color: var(--light-color);
            font-size: 4vi;

        }

    }
</style>
