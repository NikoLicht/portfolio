---
import MainLayout from "./MainLayout.astro";
const {frontmatter} = Astro.props;
---


<MainLayout>
    <div slot="top-section">
    <h1>{frontmatter.funnyTitle}</h1>
        <div class="contact-list">
        {
            frontmatter.contactPoints.map((contact :any) => 
            <div class="contact-container">
                <div class="contact">
                    <a href={contact.link}>{contact.title}</a>
                </div>
            </div>
            )
        }
            <div class="contact-container">
                <div class="contact">
                    <p>licht.nikolaj (at) gmail.com</p>
                </div>
            </div>

            <div class="contact-container">
                <div class="contact">
                    <p>  10 624 605</p>
                    <p>+ 10 000 020</p>
                    <hr>
                    <p>my phone num</p>
                    <hr class="double-line">
                </div>
            </div>

        </div>
    </div>
    <div slot="bottom-section">
        <slot>

        </slot>

    </div>
</MainLayout>


<style>
    .contact-list{
        display: flex;
        justify-content: space-evenly;
        justify-items: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 4em;
    }


    .contact-container{
        flex-grow: 3;
        font-size: 1.5rem;
        text-align: center;
    }

    .double-line{
        border: 0;
        border-top: 3px double #333;
    }
</style>